body {
	background-image: url( {{'bg-noise.jpg' | asset_url }});
	background-repeat: no-repeat;
	background-position: top center;
}

.product-single {
	background-image: url( {{'bg-camo.jpg' | asset_url }});
	background-repeat: repeat-y;
	background-position: top center;
}

header .store-selector .primary-flag:after {
	background-image: url( {{'button-select-light.svg' | asset_url }});
	width: 14px;
	height: 10px;
	display: block;
	content: '';
	position: absolute;
	right: -34px;
	top: 12px;
	background-repeat: no-repeat;
}

p.voltage:before {
	background-image: url( {{'power-uk-light.svg' | asset_url }} );
	width: 30px;
	height: 28px;
	display: block;
	content: '';
	position: absolute;
	left: 0;
	top: 0;
	background-repeat: no-repeat;
	margin-top: -5px;
}